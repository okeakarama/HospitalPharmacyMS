<div>

    <section id="loginForm">

        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <div class="form-group col-md-4" style="margin-top:10%; text-align:left; margin-left:33%; background-color:transparent; border:2px groove blue; padding:30px;">

                <h1 style="text-align:center; padding-bottom:10px">GUU PHARMACY</h1>

                <h4>CREATE NEW USER</h4>

                <div>
                    USERNAME
                    <input type="text" name="UserName" class="form-control" />
                </div>

                <div>
                    PASSWORD
                    <input type="password" name="Password" class="form-control" />
                </div>

                <div>
                    CONFIRM PASSWORD
                    <input type="password" name="ConfirmPassword" class="form-control" />
                </div>


                <input type="submit" value="Register" class="btn btn-primary" />

            </div>
        }
    </section>
    @*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@
</div>




